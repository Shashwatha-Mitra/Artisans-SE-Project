<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:id="@+id/home_page_display_products_rl">

        <ImageView
            android:id="@+id/home_page_display_products_iv_product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars[2]" />

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/home_page_display_products_tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="#000"
            android:textSize="18sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_below="@+id/home_page_display_products_iv_product_image"/>

        <android.support.v7.widget.AppCompatRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_page_display_products_tv_product_name"
            android:theme="@style/Yellow.Small.AppCompatRatingBar.White"
            android:clickable="false"
            android:numStars="5"
            android:stepSize="0.1"
            style="@style/Yellow.Small.AppCompatRatingBar.White"
            android:id="@+id/home_page_display_products_rb"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/home_page_display_products_rb"
            android:layout_below="@+id/home_page_display_products_tv_product_name"
            android:id="@+id/home_page_display_products_tv_number_rated"/>

        <TextView
            android:id="@+id/home_page_display_products_tv_rupee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rupee"
            android:textSize="16sp"
            android:textColor="#ff1744"
            android:layout_below="@+id/home_page_display_products_rb"/>

        <TextView
            android:id="@+id/home_page_display_products_tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="16sp"
            android:textColor="#ff1744"
            android:layout_below="@+id/home_page_display_products_rb"
            android:layout_toEndOf="@+id/home_page_display_products_tv_rupee"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>