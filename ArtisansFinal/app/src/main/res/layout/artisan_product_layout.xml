<?xml version="1.0" encoding="utf-8"?>


<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:orientation="vertical"
    android:id="@+id/artisan_product_layout_cv"
    style="@style/Widget.MaterialComponents.CardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artisan_product_layout_rl"
        android:layout_margin="8sp">

        <ImageView
            android:id="@+id/artisan_product_layout_iv_product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="8sp"/>

        <TextView
            android:id="@+id/artisan_product_layout_tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/artisan_product_layout_iv_product_image"
            android:layout_marginStart="8dp"
            android:text="Product Name"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <android.support.v7.widget.AppCompatRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artisan_product_layout_tv_product_name"
            android:layout_toEndOf="@+id/artisan_product_layout_iv_product_image"
            android:theme="@style/Yellow.Small.AppCompatRatingBar.White"
            android:clickable="false"
            android:numStars="5"
            android:stepSize="0.1"
            style="@style/Yellow.Small.AppCompatRatingBar.White"
            android:id="@+id/artisan_product_layout_rb"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/artisan_product_layout_rb"
            android:layout_below="@+id/artisan_product_layout_tv_product_name"
            android:id="@+id/artisan_product_layout_tv_number_rated"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artisan_product_layout_tv_rupee"
            android:layout_toEndOf="@id/artisan_product_layout_iv_product_image"
            android:layout_below="@id/artisan_product_layout_rb"
            android:text="@string/rupee"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textColor="#ff1744"/>

        <TextView
            android:id="@+id/artisan_product_layout_tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/artisan_product_layout_tv_rupee"
            android:layout_below="@id/artisan_product_layout_rb"
            android:text="Product Price"
            android:textSize="18sp"
            android:textColor="#ff1744"/>

    </RelativeLayout>


</android.support.design.card.MaterialCardView>


