<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--Search Toolbar-->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/explore_base_tb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/selected_category_spinner_search_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/choice"
                    android:layout_gravity="center" />

                <SearchView
                    android:id="@+id/selected_category_sv_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:iconifiedByDefault="false"
                    android:queryHint="Search Here"
                    android:layout_weight="1"
                    android:focusedByDefault="false" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>


    <!--Loading Layout-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/selected_category_loading_rl">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66ceff"
            android:id="@+id/selected_category_loading_iv"
            android:src="@mipmap/loading2" />

    </RelativeLayout>

    <!--Empty Category Layout-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/selected_category_not_found_outer_rl">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Products Found"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:background="#66ceff"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/selected_category_content_rl"
        android:layout_below="@+id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".SelectedCategoryActivity"
            android:weightSum="1"
            android:background="@color/common"
            android:id="@+id/selected_category_ll">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.01"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sortBy"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <Spinner
                    android:id="@+id/selected_category_spinner_sort_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/sortChoice" />

            </LinearLayout>

            <!--Products Display-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.85"
                android:id="@+id/selected_category_rl">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/selected_category_rv">

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

            <!--No products found-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/selected_category_not_found_inner_rl">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="No Matching Products Found"
                    android:gravity="center"
                    android:textSize="50sp"
                    android:background="@color/common"/>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>